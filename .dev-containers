version: '3.1'

services:
  server:
    build:
      dockerfile: Dockerfile.dev
      context: ./testing/nginx
    ports:
      - 80:80
    restart: always
    image: tttvlw-server-development
    container_name: tttvlw-nginx-development
    depends_on:
      - backend
      - frontend

  backend:
    build:
      dockerfile: Dockerfile.dev
      context: ./backend
    restart: always
    image: tttvlw-backend-development
    container_name: tttvlw-backend-development
    ports:
      - 5000:3001
    volumes:
      - /c/Users/shubh/Documents/cs/cse110/tritontalk/backend:/usr/src/app

  frontend:
    build:
      dockerfile: Dockerfile.dev
      context: ./client
    restart: always
    image: tttvlw-frontend-development
    container_name: tttvlw-frontend-testing
    ports:
      - 4000:3000
    volumes:
      - /c/Users/shubh/Documents/cs/cse110/tritontalk/client:/usr/src/app
    stdin_open: true
    command: npm run docker
